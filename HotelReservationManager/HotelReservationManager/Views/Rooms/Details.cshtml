@model HotelReservationManager.Models.Room

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Room</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Room Capacity
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Capacity)
        </dd>
        <dt class="col-sm-2">
            Type of the room
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model._Type)
        </dd>
        <dt class="col-sm-2">
            Is the room available?
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsAvailable)
        </dd>
        <dt class="col-sm-2">
            Price per bed for Adult
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PricePerBedForAdult)
        </dd>
        <dt class="col-sm-2">
            Price per bed for Child
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PricePerBedForChild)
        </dd>
        <dt class="col-sm-2">
            Room Number
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoomNumber)
        </dd>
