@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService

@model HotelReservationManager.Models.Room

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Room @Html.DisplayFor(model => model.RoomNumber)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Room Capacity
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Capacity)
        </dd>
        <dt class="col-sm-2">
            Type of the room
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model._Type)
        </dd>
        <dt class="col-sm-2">
            Is the room available?
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsAvailable)
        </dd>
        <dt class="col-sm-2">
            Price per bed for Adult (in euro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PricePerBedForAdult)
        </dd>
        <dt class="col-sm-2">
            Price per bed for Child (in euro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PricePerBedForChild)
        </dd>
        <dt class="col-sm-2">
            Room Number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoomNumber)
        </dd>
    </dl>
</div>
<div>
    @if (( await AuthorizationService.AuthorizeAsync(User, "RequireAdministratorRole") ).Succeeded)
    {
        <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a>
    }
    <a asp-action="Index">Back to List</a>
</div>
