@model IEnumerable<HotelReservationManager.Models.Reservation>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateOfCheckIn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfCheckOut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IncludeBreakfast)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AllInclusive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfCheckIn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfCheckOut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IncludeBreakfast)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AllInclusive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
